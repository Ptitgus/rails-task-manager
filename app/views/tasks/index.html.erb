<h1 class="display-1 ms-5">My tasks :</h1>

<div class="w-25 ms-5">
  <ul class="list-group">
  <% @tasks.each do |task| %>
    <li class="list-group-item">
      <%= link_to task.title, task_path(task) %>
    </li>
  <% end %>
  </ul>
</div>

<div class="w-25 ms-5">
  <%= link_to "Create a new task", new_task_path %>
</div>
